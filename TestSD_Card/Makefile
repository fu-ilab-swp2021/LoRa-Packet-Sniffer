APPLICATION=Test_SD_Card

BOARD ?= b-l072z-lrwan1

DRIVER ?= sx1276

LORA_REGION ?= EU868

USEMODULE += xtimer
USEMODULE += $(DRIVER)
#sd card
USEMODULE += vfs
USEMODULE += fatfs_vfs
USEMODULE += mtd_sdcard

CFLAGS += -DSDCARD_SPI_PARAM_SPI=SPI_DEV\(0\)
CFLAGS += -DSDCARD_SPI_PARAM_CS=GPIO_PIN\(1,12\)
CFLAGS += -DSDCARD_SPI_PARAM_CLK=GPIO_PIN\(1,13\)
CFLAGS += -DSDCARD_SPI_PARAM_MOSI=GPIO_PIN\(1,15\)
CFLAGS += -DSDCARD_SPI_PARAM_MISO=GPIO_PIN\(1,14\)

#btn
USEMODULE += periph_gpio_irq





DEVELHELP ?= 1

RIOTBASE ?= $(CURDIR)/../../RIOT

include $(RIOTBASE)/Makefile.include 
